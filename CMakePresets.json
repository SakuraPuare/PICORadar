{
    "version": 2,
    "configurePresets": [
      {
        "name": "vcpkg",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "CMAKE_BUILD_TYPE": "Debug" 
        }
      },
      {
        "name": "coverage",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build-coverage",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "ENABLE_COVERAGE": "ON",
          "CMAKE_CXX_FLAGS": "--coverage",
          "CMAKE_C_FLAGS": "--coverage",
          "CMAKE_BUILD_TYPE": "Debug"
        }
      }
    ]
  }